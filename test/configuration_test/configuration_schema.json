{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product schema Erdgaz",
  "description": "Schema for configuration of Erdgaz products.",
  "type": "object",
  "properties": {
    "header": {
      "$ref": "#/$defs/header"
    },
    "formats" : {
      "$ref" : "#/$defs/formats"
    },
    "mappings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/mapping"
      }
    },
    "configuration_description": {
      "type": "string",
      "minLength": 5,
      "maxLength": 150,
      "regex": "^[a-zA-Z0-9]?"
    }
  },
  "additionalProperties": false,
  "required": [
    "header",
    "mappings",
    "configuration_description"
  ],
  "$defs": {
    "header": {
      "type": "object",
      "properties": {
        "read": {
          "type": "boolean"
        },
        "skip_before" : {
          "type" : "integer"
        },
        "skip_after": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "required": [
        "read"
      ]
    },
    "formats" : {
      "type" : "object",
      "properties" : {
        "date_format" : {
          "type" : "string"
        }
      },
      "additionalProperties": false
    },
    "mapping": {
      "type": "object",
      "properties": {
        "index": {
          "$ref": "#/$defs/index"
        },
        "from": {
          "$ref": "#/$defs/from"
        },
        "to": {
          "$ref": "#/$defs/to"
        }
      }
    },
    "index": {
      "type": "integer"
    },
    "from": {
      "properties": {
        "column": {
          "type": "string"
        },
        "from_type": {
          "enum": [
            "string",
            "int32",
            "number",
            "double",
            "date"
          ]
        },
        "from_format": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "column",
        "from_type"
      ]
    },
    "to": {
      "properties": {
        "destination": {
          "type": "string"
        }
      }
    },
    "required": [
      "index",
      "from",
      "to"
    ]
  }
}