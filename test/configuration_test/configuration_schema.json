{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product schema Erdgaz",
  "description": "Schema for configuration of Erdgaz products.",
  "type": "object",
  "properties": {
    "mappings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/mapping"
      }
    },
    "configuration_description": {
      "type": "string",
      "minLength": 5,
      "maxLength": 150,
      "regex": "^[a-zA-Z0-9]?"
    }
  },
  "additionalProperties": false,
  "required": [
    "mappings",
    "configuration_description"
  ],
  "$defs": {
    "mapping": {
      "type": "object",
      "properties": {
        "index": {
          "$ref": "#/$defs/index"
        },
        "from": {
          "$ref": "#/$defs/from"
        },
        "to": {
          "$ref": "#/$defs/to"
        }
      }
    },
    "index": {
      "type": "integer"
    },
    "from": {
      "properties": {
        "column": {
          "type": "string"
        },
        "from_type": {
          "enum": [
            "string",
            "int32",
            "number",
            "date"
          ]
        },
        "from_format": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "column", "from_type"
      ]
    },
    "to": {
      "properties": {
        "destination": {
          "type": "string"
        }
      }
    },
    "required" : ["index", "from", "to"]
  }
}