{
  "description": "Schema for configuration.",
  "configuration_description": {
    "type": "string",
    "minLength": 5,
    "maxLength": 150,
    "regex": "^[a-zA-Z0-9]?"
  },
  "mappings": {
    "type": "array",
    "items": {
      "$ref": "#/$defs/mapping"
    }
  },
  "required": [
    "mappings", "configuration_description"
  ],
  "$defs": {
    "mapping": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "#/$defs/from"
        },
        "to": {
          "$ref": "#/$defs/to"
        }
      }
    },
    "from": {
      "properties": {
        "column": {
          "type": "string"
        },
        "from_type": {
          "enum": [
            "string",
            "integer",
            "number",
            "date"
          ]
        },
        "from_format": {
          "type": "string"
        }
      },
      "required": [
        "column"
      ]
    },
    "to": {
      "properties": {
        "destination": {
          "type": "string"
        }
      }
    }
  }
}